{
  "manifest_version": 3,
  "version": "1.0.1",
  "author": "Maxime MÃ©linon",
  "name": "Outil AED",
  "description": "Cette extension permet d'assister le travail d'AED et de faire le lien avec Pronote",
  "browser_specific_settings": {
    "gecko": {
      "id": "messageDisplayScript@sample.extensions.thunderbird.net",
      "strict_min_version": "110.0a1"
    }
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "permissions": [
    "messagesRead",
    "messagesModify",
    "activeTab",
    "tabs",
    "compose",
    "menus"
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "page.html"
  },
  "experiment_apis": {
    "notificationbar": {
      "schema": "notificationbar/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "notificationbar"
          ]
        ],
        "script": "notificationbar/implementation.js"
      }
    }
  }
}
